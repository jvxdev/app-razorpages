@page "~/categorias/{skip?}/{take?}"
@model razor_app.Pages.CategoriesModel
@{
    ViewData["Title"] = "Categorias";
}

<div>
    <h1>Categorias</h1>

    <table>
        <thead>
            <tr>
                <td>ID</td>
                <td>Título</td>
                <td>Preço</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Title</td>
                    <td>@category.Price.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
